<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Color x:Key="LEDGreenColor">#89ff14</Color>
    <Color x:Key="LEDRedColor">#ff3232</Color>
    <Color x:Key="LEDOrangeColor">#ffae19</Color>
    <Color x:Key="LEDBlackColor">#000000</Color>
    <Color x:Key="LEDWhiteColor">#ffffff</Color>

    <SolidColorBrush x:Key="LEDGreenBrush" Color="{StaticResource LEDGreenColor}"/>
    <SolidColorBrush x:Key="LEDRedBrush" Color="{StaticResource LEDRedColor}"/>
    <SolidColorBrush x:Key="LEDOrangeBrush" Color="{StaticResource LEDOrangeColor}"/>
    <SolidColorBrush x:Key="LEDBlackBrush" Color="{StaticResource LEDBlackColor}" />
    <SolidColorBrush x:Key="LEDWhiteBrush" Color="{StaticResource LEDWhiteColor}"/>

    <Storyboard x:Key="RedToOrangeStoryboard">
        <ColorAnimation
            Storyboard.TargetProperty="(Ellipse.Fill).(SolidColorBrush.Color)"
            From="{StaticResource LEDRedColor}"
            To="{StaticResource LEDOrangeColor}"
            Duration="0:0:1"
            AutoReverse="True"
            RepeatBehavior="Forever" />
    </Storyboard>
</ResourceDictionary>