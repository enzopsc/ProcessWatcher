<mah:MetroWindow x:Class="ProcessWatcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProcessWatcher"
        xmlns:reactiveUi="http://reactiveui.net"
        xmlns:controls="clr-namespace:Notifications.Wpf.Controls;assembly=Notifications.Wpf"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        Icon="pack://application:,,,/eye.ico"
        ShowIconOnTitleBar="True"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=local:AppBootstrapper, IsDesignTimeCreatable=True}"
        Title="ProcessWatcher" Height="350" Width="525">
    <Grid>
        <reactiveUi:RoutedViewHost HorizontalContentAlignment="Stretch"
                                   VerticalContentAlignment="Stretch"
                                   Router="{Binding Router}" />
        <controls:NotificationArea x:Name="WindowArea" Position="BottomRight" MaxItems="1"/>
    </Grid>
</mah:MetroWindow>
