<Window x:Class="ProcessWatcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProcessWatcher"
        xmlns:customControls="clr-namespace:ProcessWatcher.CustomControls;assembly=ProcessWatcher.CustomControls"
        xmlns:reactiveUi="http://reactiveui.net"
        xmlns:controls="clr-namespace:Notifications.Wpf.Controls;assembly=Notifications.Wpf"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=local:AppBootstrapper, IsDesignTimeCreatable=True}"
        Title="ProcessWatcher" Height="350" Width="525">
    <Grid>
        <reactiveUi:RoutedViewHost HorizontalContentAlignment="Stretch"
                                   VerticalContentAlignment="Stretch"
                                   Router="{Binding Router}" />
        <controls:NotificationArea x:Name="WindowArea" Position="BottomRight" MaxItems="1"/>
    </Grid>
</Window>
